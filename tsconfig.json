{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["DOM", "ESNext"],
        "module": "ESNext",
        "checkJs": false,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "baseUrl": "./",
        "strict": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
